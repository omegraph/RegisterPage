        @Html.DisplayFor(modelItem => item.ProductName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RecallTitle)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RecallDateStart)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RecallDateEnd)
    </td>
    <td class="text-center">
        @Html.ActionLink("Edit", "Edit", new { id = item.RecallId }) |
